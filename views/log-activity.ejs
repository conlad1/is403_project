<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= pageTitle %> | FlowTrack</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Flatpickr (date & time picker) -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/themes/dark.css">
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
</head>
<body class="bg-slate-950 text-slate-100">

<div class="flex min-h-screen">
  <!-- Sidebar -->
  <%- include('partials/sidebar', { current: 'log-activity' }) %>

  <!-- Main -->
  <main class="flex-1 px-8 py-6 overflow-y-auto">
    <header class="flex flex-col gap-2 mb-6">
      <h1 class="text-2xl font-semibold tracking-tight text-slate-50">
        Log your day
      </h1>
      <p class="text-sm text-slate-400 max-w-xl">
        Capture what you worked on, how focused you felt, and how many
        distractions pulled you away. We’ll use this to surface your peak
        times on the dashboard.
      </p>
    </header>

    <section class="grid gap-6 lg:grid-cols-[minmax(0,1.1fr)_minmax(0,1fr)]">
      <!-- Log form -->
      <div class="rounded-2xl bg-slate-900 border border-slate-800 p-6">
        <h2 class="text-sm font-semibold text-slate-50 mb-4">
          Log an activity
        </h2>

        <form id="activityForm" class="space-y-4">
          <!-- Activity name -->
          <div>
            <label for="activityName" class="block text-xs font-medium text-slate-300 mb-1">
              What were you working on?
            </label>
            <input
              id="activityName"
              name="activityName"
              type="text"
              required
              placeholder="e.g., Deep work — database project"
              class="w-full rounded-xl bg-slate-950 border border-slate-700 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>

          <!-- Date -->
          <div>
            <label for="activityDate" class="block text-xs font-medium text-slate-300 mb-1">
              Date
            </label>
            <input
              id="activityDate"
              name="activityDate"
              type="text"
              value="<%= today %>"
              class="w-full rounded-xl bg-slate-950 border border-slate-700 px-3 py-2 text-sm text-slate-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>

          <!-- Time range -->
          <div class="grid gap-4 sm:grid-cols-2">
            <div>
              <label for="startTime" class="block text-xs font-medium text-slate-300 mb-1">
                Time started
              </label>
              <input
                id="startTime"
                name="startTime"
                type="text"
                required
                class="w-full rounded-xl bg-slate-950 border border-slate-700 px-3 py-2 text-sm text-slate-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>
            <div>
              <label for="endTime" class="block text-xs font-medium text-slate-300 mb-1">
                Time ended
              </label>
              <input
                id="endTime"
                name="endTime"
                type="text"
                required
                class="w-full rounded-xl bg-slate-950 border border-slate-700 px-3 py-2 text-sm text-slate-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              />
            </div>
          </div>

          <!-- Duration display -->
          <p id="durationDisplay" class="text-xs text-slate-400">
            Duration: --
          </p>

          <!-- Effectiveness slider -->
          <div>
            <div class="flex items-center justify-between mb-1">
              <label for="effectiveness" class="block text-xs font-medium text-slate-300">
                Effectiveness (1–10)
              </label>
              <span class="text-xs text-blue-300">
                <span id="effectivenessValue">7</span>/10
              </span>
            </div>
            <input
              id="effectiveness"
              name="effectiveness"
              type="range"
              min="1"
              max="10"
              value="7"
              class="w-full"
            />
          </div>

          <!-- Distractions -->
          <div>
            <label for="distractions" class="block text-xs font-medium text-slate-300 mb-1">
              How many times were you distracted?
            </label>
            <input
              id="distractions"
              name="distractions"
              type="number"
              min="0"
              step="1"
              placeholder="e.g., 3"
              class="w-full rounded-xl bg-slate-950 border border-slate-700 px-3 py-2 text-sm text-slate-100 placeholder:text-slate-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>

          <!-- Submit -->
          <div class="pt-2">
            <button
              type="submit"
              class="inline-flex items-center justify-center rounded-xl bg-blue-500 px-4 py-2 text-sm font-semibold text-slate-950 shadow-sm hover:bg-blue-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-slate-950"
            >
              Save activity
            </button>
          </div>
        </form>
      </div>

      <!-- Daily log -->
      <div class="rounded-2xl bg-slate-900 border border-slate-800 p-6 flex flex-col">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h2 class="text-sm font-semibold text-slate-50">
              Daily log
            </h2>
            <p class="text-xs text-slate-500 mt-1">
              Switch days to review, edit, or remove previous activities.
            </p>
          </div>
          <div class="flex items-center gap-2">
            <label for="daySelector" class="text-[11px] uppercase tracking-wide text-slate-500">
              Viewing day
            </label>
            <input
              id="daySelector"
              type="text"
              value="<%= today %>"
              class="rounded-lg bg-slate-950 border border-slate-700 px-2 py-1 text-xs text-slate-100 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>
        </div>

        <div id="activitiesEmpty" class="flex-1 flex items-center justify-center text-xs text-slate-500 border border-dashed border-slate-700 rounded-xl">
          No activities logged for this day yet.
        </div>

        <ul id="activitiesList" class="hidden flex-1 flex-col gap-3 overflow-y-auto pr-1 text-sm">
          <!-- Populated by JS -->
        </ul>
      </div>
    </section>
  </main>
</div>

<script>
  window.ACTIVITY_DATA = {
    today: '<%= today %>',
    activitiesByDate: <%- JSON.stringify(activitiesByDate || {}) %>
  };

  // Initialize Flatpickr for date & time fields
  document.addEventListener('DOMContentLoaded', function () {
    // Date pickers (stored as YYYY-MM-DD)
    flatpickr('#activityDate', {
      dateFormat: 'Y-m-d',
      defaultDate: '<%= today %>',
      allowInput: true
    });

    flatpickr('#daySelector', {
      dateFormat: 'Y-m-d',
      defaultDate: '<%= today %>',
      allowInput: true
    });

    // Time pickers (stored as HH:MM 24hr -> matches existing JS)
    flatpickr('#startTime', {
      enableTime: true,
      noCalendar: true,
      dateFormat: 'H:i',
      time_24hr: true,
      allowInput: true
    });

    flatpickr('#endTime', {
      enableTime: true,
      noCalendar: true,
      dateFormat: 'H:i',
      time_24hr: true,
      allowInput: true
    });
  });
</script>

<script src="/js/logActivity.js"></script>

</body>
</html>