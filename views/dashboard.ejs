<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= pageTitle %> | FlowTrack</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- Chart.js CDN -->
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-slate-950 text-slate-100">

<div class="flex min-h-screen">
  <!-- Sidebar -->
  <%- include('partials/sidebar', { current: 'dashboard' }) %>

  <!-- Main content -->
  <main class="flex-1 px-8 py-6 overflow-y-auto">
    <header class="flex flex-col gap-2 mb-6">
      <h1 class="text-2xl font-semibold tracking-tight text-slate-50">
        Your effectiveness snapshot
      </h1>
      <p class="text-sm text-slate-400 max-w-xl">
        See when youâ€™re naturally most locked in so you can schedule deep work
        around your peak times.
      </p>
    </header>

    <!-- Top metrics -->
    <section class="grid gap-4 md:grid-cols-2 xl:grid-cols-4">
      <!-- Peak time -->
      <div class="rounded-2xl bg-slate-900 border border-slate-800 p-4">
        <div class="text-xs font-medium uppercase tracking-wide text-slate-400">
          Peak time to work
        </div>
        <div class="mt-3 flex items-baseline gap-2">
          <div class="text-2xl font-semibold text-blue-400">
            <%= summaryStats.peakTimeLabel %>
          </div>
          <div class="text-xs text-slate-500">
            highest average focus
          </div>
        </div>
      </div>

      <!-- Peak day -->
      <div class="rounded-2xl bg-slate-900 border border-slate-800 p-4">
        <div class="text-xs font-medium uppercase tracking-wide text-slate-400">
          Peak day of the week
        </div>
        <div class="mt-3 flex items-baseline gap-2">
          <div class="text-2xl font-semibold text-blue-400">
            <%= summaryStats.peakDayLabel %>
          </div>
          <div class="text-xs text-slate-500">
            strongest average effectiveness
          </div>
        </div>
      </div>

      <!-- Average effectiveness -->
      <div class="rounded-2xl bg-slate-900 border border-slate-800 p-4">
        <div class="text-xs font-medium uppercase tracking-wide text-slate-400">
          Average effectiveness
        </div>
        <div class="mt-3 flex items-baseline gap-2">
          <div class="text-2xl font-semibold text-slate-50">
            <%= summaryStats.averageEffectiveness %>/10
          </div>
          <div class="text-xs text-slate-500">
            across all logged sessions
          </div>
        </div>
      </div>

      <!-- Avg distractions -->
      <div class="rounded-2xl bg-slate-900 border border-slate-800 p-4">
        <div class="text-xs font-medium uppercase tracking-wide text-slate-400">
          Average distractions
        </div>
        <div class="mt-3 flex items-baseline gap-2">
          <div class="text-2xl font-semibold text-slate-50">
            <%= summaryStats.averageDistractions %>
          </div>
          <div class="text-xs text-slate-500">
            per session on average
          </div>
        </div>
      </div>
    </section>

    <!-- Charts -->
    <section class="mt-8 grid gap-8 lg:grid-cols-2">
      <!-- Effectiveness by hour -->
      <div class="rounded-2xl bg-slate-900 border border-slate-800 p-5">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h2 class="text-sm font-semibold text-slate-50">
              Effectiveness by hour
            </h2>
            <p class="text-xs text-slate-500 mt-1">
              Average focus score across all logged sessions, grouped by start time.
            </p>
          </div>
        </div>
        <div class="h-64">
          <canvas id="hourlyChart"></canvas>
        </div>
      </div>

      <!-- Weekly effectiveness -->
      <div class="rounded-2xl bg-slate-900 border border-slate-800 p-5">
        <div class="flex items-center justify-between mb-4">
          <div>
            <h2 class="text-sm font-semibold text-slate-50">
              Weekly effectiveness
            </h2>
            <p class="text-xs text-slate-500 mt-1">
              Average effectiveness score by day of the week.
            </p>
          </div>
        </div>
        <div class="h-64">
          <canvas id="weeklyChart"></canvas>
        </div>
      </div>
    </section>
  </main>
</div>

<!-- Pass data to JS -->
<script>
  window.DASHBOARD_DATA = {
    hourlyData: <%- JSON.stringify(hourlyData || []) %>,
    weeklyData: <%- JSON.stringify(weeklyData || []) %>
  };
</script>
<script src="/js/dashboard.js"></script>

</body>
</html>